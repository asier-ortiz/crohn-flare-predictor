# Crohn Flare Predictor ML API - Environment Variables
# Copy this file to .env and adjust values as needed

# API Configuration
APP_NAME="Crohn Flare Predictor ML API"
VERSION="1.0.0"
API_PREFIX="/api/v1"

# Server Configuration
HOST="0.0.0.0"
PORT=8001
RELOAD=false  # Set to true only in development
WORKERS=1

# Environment
ENVIRONMENT="development"  # development | staging | production
DEBUG=false

# Logging
LOG_LEVEL="INFO"  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# CORS - Add your web app URLs here
CORS_ORIGINS="http://localhost:8000,http://localhost:5173"

# Model Configuration
MODEL_PATH="models/rf_severity_classifier.pkl"
MODEL_VERSION="1.0.0"

# Performance
MAX_PREDICTION_TIME=30.0
